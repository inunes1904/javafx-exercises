<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
fx:controller="fxml.LoginController" styleClass="login"
hgap="15" vgap="15">

 <padding>
        <Insets top="40" right="40" left="40" />
 </padding>
 
 <columnConstraints>
	 <ColumnConstraints minWidth="90" prefWidth="90"
	  />
	 <ColumnConstraints prefWidth="200" maxWidth="Infinity"
	 hgrow="ALWAYS"/>
 </columnConstraints>


<Label styleClass="login-title" text="WELCOME BACK"
GridPane.columnIndex="0" GridPane.rowIndex="0"
GridPane.columnSpan="2" GridPane.halignment="CENTER">

<GridPane.margin>

<Insets  bottom="40" top="40" />
</GridPane.margin>

</Label>


<Label text="EMAIL:" styleClass="login-form-label"
GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
<TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
fx:id="emailField">

</TextField>

<Label text="PASSWORD:" styleClass="login-form-label"
GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
<PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2"
fx:id="passwordField">

</PasswordField>

<Button text="LOGIN" styleClass="btn"
GridPane.columnIndex="0" GridPane.rowIndex="3"
onAction="#login" GridPane.columnSpan="2" 
 GridPane.halignment="RIGHT" >

<GridPane.margin>

<Insets  bottom="40" top="40" />
</GridPane.margin>

</Button>


</GridPane>